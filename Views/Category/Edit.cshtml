@model Category
<form method="post" style="width:100%">
    <div class="border p-5 mt-4">
        <div class="row pb-2 text-center">
            <h2 class="text-primary">
                Create Category
            </h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <lable asp-for="Name">Category Name</lable>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <lable asp-for="DisplayOrder">Display Order</lable>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-danger text-center">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-info text-end">Back</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}